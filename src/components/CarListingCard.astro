---
export interface Props {
  car: any;
  carSlug: string;
}

const { car, carSlug } = Astro.props;
const carData = car.data.car;
const imagePath = `/cars/${carSlug}.jpeg`;
---

<article class="car-card">
  <div class="car-image">
    <img src={imagePath} alt={carData.model} loading="lazy" />
  </div>
  <div class="car-content">
    <h3>{carData.model}</h3>
    <div class="car-specs">
      <span class="spec">
        <strong>{carData.specs.power_hp}hp</strong>
      </span>
      <span class="spec">
        <strong>{carData.specs.production_year}</strong>
      </span>
      <span class="spec">
        <strong>{carData.technical_specs.fuel_type}</strong>
      </span>
      <span class="spec">
        <strong>{carData.technical_specs.transmission}</strong>
      </span>
    </div>
    <div class="car-pricing">
      <span class="price">From <strong>{carData.price_list[carData.price_list.length - 1].price_per_day}</strong>/day</span>
      <span class="min-rental">Min. {carData.rental_terms.minimum_rental_period_days} days</span>
    </div>
    <a href={`/cars/${carSlug}`} class="btn btn-primary">View Details</a>
  </div>
</article>

<style>
  .car-card {
    background: var(--color-white);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    transition: all 0.3s ease;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column-reverse;
    border-left: 4px solid var(--color-medium);
    position: relative;
  }

  .car-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 100%;
    background: var(--color-dark);
    transform: scaleY(0);
    transform-origin: top;
    transition: transform 0.15s ease;
  }

  .car-card:hover::before {
    transform: scaleY(1);
  }

.car-card:hover {
  border-left: 4px solid var(--color-dark);
  transform: translateY(-8px);
  box-shadow: var(--shadow-lg);
}

  .car-image {
    height: 400px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
    flex-shrink: 0; /* Prevent shrinking */
    padding: 1.2rem;
  }

  .car-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
    border-radius: 8px;
  }

  .car-card:hover .car-image img {
    transform: scale(1.05);
  }

  .car-content {
    padding: 1.5rem;
    flex: 1; /* Take remaining space */
    display: flex;
    flex-direction: column;
  }

  .car-content h3 {
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .car-specs {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    min-height: 2rem; /* Consistent height */
  }

  .spec {
    background: var(--color-light);
    color: var(--color-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .car-pricing {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--color-background);
    border-radius: 8px;
    margin-top: auto; /* Push to bottom */
  }

  .price {
    font-size: 1.1rem;
    color: var(--color-dark);
  }

  .min-rental {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  @media (max-width: 768px) {
    .car-specs {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .car-pricing {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }
  }
</style>